{
  "name": "express-ts-sample",
  "version": "0.2.0",
  "description": "typescript + express.js + typeorm",
  "author": "Sangdon Park <pravusid@gmail.com>",
  "main": "dist/main.js",
  "scripts": {
    "prestart": "npm run clean && npm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "nodemon --watch src --exec 'ts-node src/main.ts'",
    "dev:prod": "NODE_ENV=production concurrently 'tsc -w' 'nodemon --watch dist dist/main.js'",
    "debug": "nodemon --watch src --exec 'node --inspect-brk -r ts-node/register src/main.ts'",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "mysql": "^2.16.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.11",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^2.6.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
