{
  "name": "ts-express-typeorm",
  "version": "1.7.0",
  "description": "typescript + express.js + typeorm",
  "author": "Sangdon Park",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "prestart": "pnpm run clean && pnpm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"nodemon --watch dist --exec 'node -r @cspotcode/source-map-support/register' dist/main.js | pino-pretty\"",
    "dev:ts": "nodemon --watch src --exec 'ts-node --esm' src/main.ts | pino-pretty",
    "dev:kill": "pgrep -fl $(pwd)/node_modules/.bin | awk '{print $1}' | xargs -r -I{} kill -2 {} && lsof -ti :8080 | xargs -r -I{} kill {}",
    "dev:debug": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"nodemon --watch dist --exec 'DEBUG=1 node -r @cspotcode/source-map-support/register --inspect=9229' dist/main.js | pino-pretty\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --circular dist/",
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@godaddy/terminus": "^4.11.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/helmet": "0.0.48",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.17",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "16.6.0",
    "helmet": "^6.0.1",
    "inversify": "^6.0.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "pino": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "type-graphql": "2.0.0-beta.1",
    "typeorm": "^0.3.11",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@cspotcode/source-map-support": "^0.8.1",
    "@types/jest": "^29.2.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "madge": "^5.0.1",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1"
  }
}
