{
  "name": "express-ts-sample",
  "version": "1.0.1",
  "description": "typescript + express.js + typeorm",
  "author": "Sangdon Park <pravusid@gmail.com>",
  "main": "dist/main.js",
  "scripts": {
    "apply": "npm ci --only=prod",
    "prestart": "npm run clean && npm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc",
    "clean": "rimraf tsconfig.tsbuildinfo && rimraf dist",
    "dev": "npm run build && concurrently -p none \"tsc -w\" \"nodemon --watch dist --exec 'node -r source-map-support/register' dist/main.js\"",
    "dev:ts": "nodemon --watch src --exec 'ORM_ENV=ts ts-node' src/main.ts",
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^10.14.17",
    "body-parser": "^1.19.0",
    "class-validator": "^0.10.0",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "mysql2": "^1.7.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.7.1",
    "typeorm": "^0.2.19",
    "typescript": "^3.6.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "source-map-support": "^0.5.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0"
  }
}
